<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/settings_background"
    android:paddingTop="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/left_arrow"
                app:iconTint="@color/text_color"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_marginStart="28dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="@string/settings"
                android:textSize="@dimen/title"
                android:textColor="@color/text_color" />
        </LinearLayout>

        <Switch
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="21dp"
            android:paddingBottom="21dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/black_theme"
            android:textColor="@color/text_color"
            android:textSize="@dimen/settings_menu"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/settings_background"
            android:paddingLeft="16dp"
            android:paddingTop="21dp"
            android:paddingRight="16dp"
            android:paddingBottom="21dp"
            android:text="@string/share_app"
            android:textAlignment="textStart"
            android:textColor="@color/text_color"
            android:textSize="@dimen/settings_menu"
            android:drawableEnd="@drawable/share"
            tools:ignore="UseCompatTextViewDrawableXml" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/settings_background"
            android:paddingLeft="16dp"
            android:paddingTop="21dp"
            android:paddingRight="16dp"
            android:paddingBottom="21dp"
            android:text="@string/write_to_support"
            android:textAlignment="textStart"
            android:textColor="@color/text_color"
            android:textSize="@dimen/settings_menu"
            android:drawableEnd="@drawable/support"
            tools:ignore="UseCompatTextViewDrawableXml" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/settings_background"
            android:paddingLeft="16dp"
            android:paddingTop="21dp"
            android:paddingRight="16dp"
            android:paddingBottom="21dp"
            android:text="@string/user_agreement"
            android:textAlignment="textStart"
            android:textColor="@color/text_color"
            android:textSize="@dimen/settings_menu"
            android:drawableEnd="@drawable/forward_arrow"
            tools:ignore="UseCompatTextViewDrawableXml" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>