<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ys_blue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/ys_blue</item>
        <!-- Customize your theme here. -->
        <item name="background_color">@color/ys_blue</item>
        <item name="settings_background_color">@color/ys_white</item>
        <item name="settings_text_color">@color/ys_black</item>
        <item name="settings_icon_color">@color/ys_text_gray</item>
        <item name="search_icon_color">@color/ys_text_gray</item>
        <item name="search_background_color">@color/ys_white</item>
        <item name="search_text_background">@color/ys_light_gray</item>
        <item name="track_list_title">@color/ys_black</item>
        <item name="track_list_author">@color/ys_text_gray</item>
    </style>
</resources>